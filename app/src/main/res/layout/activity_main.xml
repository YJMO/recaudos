<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="#B1B1B1"
    android:foregroundTint="#FFFFFF"
    android:outlineAmbientShadowColor="#A55050"
    android:outlineSpotShadowColor="#AE1212"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/txtFecha"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="date"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnFecha"
        android:layout_width="42dp"
        android:layout_height="50dp"
        android:onClick="muestraCalendario"
        app:layout_constraintEnd_toStartOf="@+id/txtFecha"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_today" />

    <DatePicker
        android:id="@+id/dpFecha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp"
        style="@style/datepicker" />


</androidx.constraintlayout.widget.ConstraintLayout>